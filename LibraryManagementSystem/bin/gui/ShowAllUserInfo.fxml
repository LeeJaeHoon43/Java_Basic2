<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ShowAllUserController">
    <children>
        <VBox layoutX="1.0" prefHeight="68.0" prefWidth="613.0" />
        <TableView fx:id="userInfoTable" layoutX="25.0" layoutY="9.0" prefHeight="394.0" prefWidth="957.0" style="-fx-border-color: #000000;">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="회원 이름" />
                <TableColumn fx:id="useremailColumn" minWidth="1.0" prefWidth="200.0" text="회원 아이디" />
                <TableColumn fx:id="usergenderColumn" prefWidth="130.0" text="성별" />
                <TableColumn fx:id="phonenumberColumn" prefWidth="200.0" text="연락처" />
            <TableColumn fx:id="addressColumn" prefWidth="225.0" text="주소" />
            </columns>
        </TableView>
        <Button fx:id="updateUserBtn" layoutX="147.0" layoutY="475.0" mnemonicParsing="false" onMouseClicked="#updateButtonAction" prefHeight="46.0" prefWidth="161.0" style="-fx-border-color: #000000;" text="회원 수정">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Button>
        <Button fx:id="removeUserBtn" layoutX="366.0" layoutY="475.0" mnemonicParsing="false" onMouseClicked="#deleteButtonAction" prefHeight="46.0" prefWidth="161.0" style="-fx-border-color: #000000;" text="회원 삭제">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Button>
        <TextField fx:id="userNameEditField" layoutX="28.0" layoutY="404.0" prefHeight="40.0" prefWidth="208.0" promptText="회원 이름" />
        <TextField fx:id="userGenderEditField" layoutX="421.0" layoutY="404.0" prefHeight="40.0" prefWidth="135.0" promptText="성별" />
        <TextField fx:id="phoneNumberEditField" layoutX="554.0" layoutY="404.0" prefHeight="40.0" prefWidth="208.0" promptText="연락처" />
      <TextField fx:id="addressEditField" layoutX="760.0" layoutY="404.0" prefHeight="40.0" prefWidth="222.0" promptText="주소" />
      <TextField fx:id="userEmailEditField" disable="true" layoutX="238.0" layoutY="404.0" prefHeight="40.0" prefWidth="185.0" />
    </children>
</AnchorPane>
